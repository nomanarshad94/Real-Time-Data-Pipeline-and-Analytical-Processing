# Environment Configuration for Real-Time Data Pipeline
# Copy this file to .env and update with your actual values

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/sensor_pipeline
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sensor_pipeline
DB_USER=your_username
DB_PASSWORD=your_password

# Logging Configuration
LOG_LEVEL=INFO

# Kaggle Configuration (if using Kaggle datasets)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Pipeline Configuration (Optional - defaults in config.py)
MONITOR_INTERVAL=5
MAX_RETRIES=3
RETRY_DELAY=5